#!/usr/bin/env simplang

; Initialize and populate number array
new_array nums 25
for_each num nums
    random num 1000
end_loop

print "Unsorted:"
for_each num nums
    print_n num
    print_n " "
end_loop
print ""

assign counter 25

begin_loop
    for_each num nums
        if_greater num next
            swap num next
        end_if
    end_loop
    decrement counter
end_loop_if_equal counter 0

print "Sorted:"
for_each num nums
    print_n num
    print_n " "
end_loop
print ""

done
