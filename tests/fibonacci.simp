#!/usr/bin/env simplang

begin_loop
    get_option target_digit "Enter Fibonacci digit to calculate up to: "
    if_less_or_equal target_digit 0
        print "Please enter a number greater than 0"
        assign target_digit 0
        continue
    end_if
end_loop_if_equal 0 0

; current_digit will be the current digit, previous_digit and last_previous_digit will be the prior two,
; counter is our iterator

assign current_digit 0
assign previous_digit 1
assign last_previous_digit 1
assign counter 0

if_equal counter 0
    print 1
    if_greater target_digit 1
        increment counter
    end_if
end_if
if_equal counter 1
    print 1
    if_greater target_digit 2
        increment counter
    end_if
end_if
if_greater target_digit 2
    begin_loop
       subtract current_digit current_digit
       add current_digit previous_digit
       add current_digit last_previous_digit
       assign last_previous_digit previous_digit
       assign previous_digit current_digit
       print current_digit
       increment counter
    end_loop_if_equal target_digit counter
end_if

done
